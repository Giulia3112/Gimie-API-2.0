# Production Environment Variables
# .env.production

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (for cloud databases)
DATABASE_URL=postgresql://user:password@host:port/database
# OR for SQLite (simpler)
DATABASE_PATH=/tmp/products.db

# External APIs
MICROLINK_API_KEY=your_microlink_api_key_here

# CORS Configuration
ALLOWED_ORIGINS=https://your-app-domain.com,https://your-mobile-app.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
